<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inventory_Management_System.Pages.DutiesPage"
             Title="Duties">
    <VerticalStackLayout Padding="20" Margin="20">

        <Border Margin="10" >
            <VerticalStackLayout Margin="10" Padding="10">
                <Entry x:Name="Duty" Placeholder="Enter a duty" />
                <HorizontalStackLayout Padding="20" Margin="10">
                    <Label Text="Due Date :" VerticalOptions="Center"></Label>
                    <DatePicker x:Name="DueDate" VerticalOptions="Center" ></DatePicker>
                </HorizontalStackLayout>
                <Button x:Name="SaveButton" Text="Save" BackgroundColor="Green" Clicked="SaveButton_OnClicked" ></Button>


            </VerticalStackLayout>
        </Border>
        
        <!-- dutylerin görünümü -->
       
        <ListView x:Name="TasksListView" > <!-- liste görünümü , x:Name c# in buraya erişebilmesini sağlar -->
            <ListView.ItemTemplate> <!-- her bir satırın nasıl görüneceği -->
                <DataTemplate> <!--tek bir veri nesnesinin UI karşılığı (şablonu kurmak için ) -->
                    <ViewCell> <!-- tek bir satırı temsil eder -->
                        <StackLayout Orientation="Horizontal" Padding="15,10" Spacing="10">

                            <Label Text="{Binding Title}" HorizontalOptions="StartAndExpand" />
                            
                            <Label 
                               Text="{Binding DueDate, StringFormat=' (Due: {0:dd/MM})'}"
                               VerticalOptions="Center"/>

                            <CheckBox VerticalOptions="Center" IsChecked="{Binding IsCompleted}" IsEnabled="True" CheckedChanged="CheckBox_OnClicked"></CheckBox>

                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
       
    </VerticalStackLayout>




</ContentPage>