<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inventory_Management_System.Pages.ProductsPage"
             Title="Products">

    <VerticalStackLayout Padding="20" Margin="20">

        <Border Margin="10" >
            <VerticalStackLayout Margin="10" Padding="10" Spacing="10">
                <Entry x:Name="ProductName" Placeholder="Enter the product name" />
                <Button x:Name="SaveButton" Text="Save" BackgroundColor="Blue" Clicked="SaveButton_OnClicked"></Button>
            </VerticalStackLayout>
        </Border>

        <ListView x:Name="TasksListView" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="15"  Spacing="10">

                            <Label Text="{Binding ProductsId}"  HorizontalOptions="StartAndExpand" />
                            <Label Text="{Binding ProductsName }" HorizontalOptions="StartAndExpand" />
                            <Button Text="X" 
                                Clicked="DeleteButton_OnClicked"
                                TextColor="White"
                                BorderColor="Red"
                                BackgroundColor="Red"
                                CornerRadius="30"                                
                                CommandParameter="{Binding .}"/>

                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </VerticalStackLayout>
</ContentPage>