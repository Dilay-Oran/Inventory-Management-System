<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inventory_Management_System.Pages.WarehousePage"
             Title="Warehouse">

    <VerticalStackLayout Padding="20" Margin="20">

        <Border Margin="10" >
            <VerticalStackLayout Margin="10" Padding="10" Spacing="10">
                <Entry x:Name="Destination" Placeholder="Enter a destination" />
                <Entry x:Name="Capacity" Placeholder="Enter a capacity" Keyboard="Numeric"/>
                <Button x:Name="SaveButton" Text="Save" BackgroundColor="Blue" Clicked="SaveButton_OnClicked"  ></Button>
            </VerticalStackLayout>
        </Border>

        <StackLayout Orientation="Horizontal" Padding="15,5" BackgroundColor="#EEEEEE" Margin="0,10,0,0">
            <Label Text="ID" FontAttributes="Bold" WidthRequest="30" />
            <Label Text="Destination" FontAttributes="Bold" HorizontalOptions="StartAndExpand" />
            <Label Text="Capacity" FontAttributes="Bold" WidthRequest="60" />
            <Label Text="Action" FontAttributes="Bold" WidthRequest="40" HorizontalTextAlignment="Center" />
        </StackLayout>

        <ListView x:Name="TasksListView" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="15"  Spacing="10">

                            <Label Text="{Binding WarehouseId}"  HorizontalOptions="StartAndExpand" />
                            <Label Text="{Binding WarehouseDestination }" HorizontalOptions="StartAndExpand" />
                            <Label Text="{Binding WarehouseCapacity }"   HorizontalOptions="StartAndExpand" />
                            <Button Text="X" 
                                Clicked="DeleteButton_OnClicked"
                                TextColor="White"
                                BorderColor="Red"
                                BackgroundColor="Red"
                                CornerRadius="30"                                
                                CommandParameter="{Binding .}"/>

                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </VerticalStackLayout>
</ContentPage>