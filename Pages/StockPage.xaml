<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inventory_Management_System.Pages.StockPage"
             Title="Stock">
    <VerticalStackLayout Padding="20" Margin="20">
        
        <Label Text="Product" FontSize="20" />
        <Picker x:Name="ProductPicker" Title="Select a product." />

        <Label Text="Warehouse" FontSize="20" Margin="0,10,0,0"/>
        <Picker x:Name="Warehouse" Title="Select a warehouse."/>

        <Label Text="Quantity" FontSize="20" Margin="0,10,0,0"/>
        <Entry x:Name="Quantity" Placeholder="Enter quantity" Keyboard="Numeric"  Margin="0,5,0,0"/>

        <Button Text="Save" Margin="0,10,0,0" BackgroundColor="Green" Clicked="SaveButton_OnClicked"  />

        <ListView x:Name="StockListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">

                            <Label Text="{Binding ProductsName}" />
                            <Label Text="{Binding WarehouseDestination}" />
                            <Label Text="{Binding Quantity}" />

                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>




    </VerticalStackLayout>
</ContentPage>