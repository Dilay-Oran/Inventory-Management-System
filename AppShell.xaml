<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Inventory_Management_System.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Inventory_Management_System.Pages"
    Title="Inventory Management System">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate pages:HomePage}" />

        <ShellContent
            Title="Products"
            ContentTemplate="{DataTemplate pages:ProductsPage}" />

        <ShellContent
            Title="Stock"
            ContentTemplate="{DataTemplate pages:StockPage}" />

        <ShellContent
            Title="Warehouse"
            ContentTemplate="{DataTemplate pages:WarehousePage}" />

        <ShellContent
            Title="Duties"
            ContentTemplate="{DataTemplate pages:DutiesPage}" />
    </TabBar>

</Shell>
